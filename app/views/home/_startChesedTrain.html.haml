%div{ class: "flex flex-col items-center "}
  .mb-4.mt-10
    %span{ class: "font-lato font-[700] lg:text-[4rem] text-[1.5rem] font-bold text-secondary" } Acts of Chesed, Delivered
  .mt-6
    = link_to "train", class: "bg-primary-original text-white lg:w-[22rem] w-[11rem] lg:h-[5rem] h-[2rem]  rounded-[0.7rem] cursor-pointer border border-secondary flex items-center justify-center lg:space-x-4 space-x-2" do
      %span{ class: "lg:text-[1.5rem] text-[0.7rem] font-alice text-center"} Start a Chesed Train
      = image_tag "/icons/arrow_left.svg", class: "lg:w-[2rem] w-[0.7rem] lg:h-[2.2rem] h-[0.7rem] lg:border lg:border-secondary lg:rounded-lg lg:px-[0.4rem] lg:py-[0.5rem]", alt: "Arrow Left"
  %div{ class: "lg:h-[40rem] h-[10rem] flex justify-center items-center"}
    = image_tag "/imgs/logo_h.png", id: "logo", style: "margin-left: 200%;", class: "w-full transition-all duration-1000 ease-in-out", alt: "Logo"
  :javascript
    const logo = document.querySelector("#logo");
    document.addEventListener("DOMContentLoaded", function() {
    logo.style.marginLeft = "0";
    });
   


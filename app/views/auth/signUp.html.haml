.container.p-10
  .flex.flex-col.items-center.justify-center.border.border-primary.rounded-lg.lg:p-10.p-5.w-full.relative
    %div{ class: "text-secondary lg:text-[2rem] text-[1rem] font-lato font-[700] mb-5"} Create Your Account

    = form_with(url: register_path, method: :post, class: 'lg:space-y-4 space-y-2 lg:w-1/2 w-full') do |f|
      .flex.flex-row.space-x-2
        %div{ class: "form-group w-1/2" }
          = f.label :firstName, "First Name", class: 'block lg:text-[1.1rem] text-[0.7rem] font-bold text-secondary mb-1'
          = f.text_field :firstName, class: 'w-full lg:px-3 px-2 lg:py-2 py-1 border border-secondary rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-500'

        %div{ class: "form-group w-1/2" }
          = f.label :lastName, "Last Name", class: 'block lg:text-[1.1rem] text-[0.7rem] font-bold text-secondary mb-1'
          = f.text_field :lastName, class: 'w-full lg:px-3 px-2 lg:py-2 py-1 border border-secondary rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-500'
      
      .form-group
        = f.label :email, "Email Address", class: 'block lg:text-[1.1rem] text-[0.7rem] font-bold text-secondary mb-1'
        = f.text_field :email, class: 'w-full lg:px-3 px-2 lg:py-2 py-1 border border-secondary rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-500'
      
      .form-group
        = f.label :verifyEmail, "Verify Email Address", class: 'block lg:text-[1.1rem] text-[0.7rem] font-bold text-secondary mb-1'
        = f.text_field :verifyEmail, class: 'w-full lg:px-3 px-2 lg:py-2 py-1 border border-secondary rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-500'

      .form-group
        = f.label :phone, "Phone Number", class: 'block lg:text-[1.1rem] text-[0.7rem] font-bold text-secondary mb-1'
        = f.text_field :phone, class: 'w-full lg:px-3 px-2 lg:py-2 py-1 border border-secondary rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-500'

      .form-group
        = f.label :password, "Password", class: 'block lg:text-[1.1rem] text-[0.7rem] font-bold text-secondary mb-1'
        = f.text_field :password, type: "password", class: 'w-full lg:px-3 px-2 lg:py-2 py-1 border border-secondary rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-500'

      .form-group
        = f.label :verifyPassword, "Verify Password", class: 'block lg:text-[1.1rem] text-[0.7rem] font-bold text-secondary mb-1'
        = f.text_field :verifyPassword, type: "password", class: 'w-full lg:px-3 px-2 lg:py-2 py-1 border border-secondary rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-500'
      %div{ class: "form-group lg:flex lg:flex-col space-y-2 lg:ml-[12.5%] ml-0" }
        %div{ class: "flex flex-row items-center space-x-2" }
          = f.check_box :news, class: ' lg:px-3 px-2 lg:py-3 py-2 border border-secondary rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-original checked:bg-primary-original'
          = f.label :news, "Send me Chesed Train news and updates", class: 'block lg:text-[0.9rem] text-[0.6rem] font-bold text-secondary'
        %div{ class: "flex flex-row items-center space-x-2" }
          = f.check_box :terms, class: ' lg:px-3 px-2 lg:py-3 py-2 border border-secondary rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-original checked:bg-primary-original'
          = f.label :terms, "I agree to the Terms of Service and Privacy Policy", class: 'block lg:text-[0.9rem] text-[0.6rem] font-bold text-secondary'
        %div{ class: "flex flex-row items-center space-x-2" }
          = f.check_box :smsNews, class: ' lg:px-3 px-2 lg:py-3 py-2 border border-secondary rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-original checked:bg-primary-original'
          = f.label :smsNews, "Send me SMS updated and news", class: 'block lg:text-[0.9rem] text-[0.6rem] font-bold text-secondary'
        
      <br>
      .mt-20.flex.justify-center
        = f.submit "Create Account", class: 'w-[11rem] bg-primary-original border border-secondary text-white lg:py-2 py-1 lg:px-4 px-2 rounded-xl transition duration-200 cursor-pointer lg:text-[1rem] text-[0.7rem]'
